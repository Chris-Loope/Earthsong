---
const { title = "Earthsong", description = "Whispers of the ancients, secrets of the Earth" } = Astro.props;
---
<html lang="en" class="bg-air text-ink selection:bg-earth/20">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="min-h-screen flex flex-col">
    <header class="border-b border-ink/10 bg-white">
      <div class="mx-auto max-w-4xl px-6 py-4 flex items-center justify-between">
        <a href="/" class="font-semibold tracking-wide">Earthsong</a>
        <nav class="space-x-5 text-sm">
          <a href="/codex">Codex</a>
          <a href="/calendar">Calendar</a>
          <a href="/elders">Elders</a>
        </nav>
      </div>
    </header>
    <main class="mx-auto max-w-4xl w-full px-6 py-10 grow">
      <slot />
    </main>
    <footer class="border-t border-ink/10 bg-white">
      <div class="mx-auto max-w-4xl px-6 py-6 text-sm text-ink/70">
        Walk gently. Â© {new Date().getFullYear()} Earthsong.
      </div>
    </footer>
  </body>
</html>
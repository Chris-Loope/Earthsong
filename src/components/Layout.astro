---
const {
  title = "Earthsong",
  description = "Whispers of the ancients, secrets of the Earth",
  image,
  fullWidth = false,
} = Astro.props;

const currentPath = Astro.url.pathname;
const navLinks = [
  { href: "/codex", label: "Codex" },
  { href: "/calendar", label: "Calendar" },
  { href: "/elders", label: "Elders" },
  { href: "/from-dominion-to-harmony", label: "Stewardship" },
];
---
<!doctype html>
<html lang="en" class="bg-air text-ink">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Earthsong" />
    {image && <meta property="og:image" content={image} />}

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    {image && <meta name="twitter:image" content={image} />}
  </head>
  <body class="min-h-screen flex flex-col">
    <header class="border-b border-ink/10 bg-white relative z-20">
      <div class="mx-auto max-w-4xl px-6 py-4 flex items-center justify-between">
        <a href="/" class="font-semibold tracking-wide">Earthsong</a>

        <!-- Desktop nav -->
        <nav aria-label="Main navigation" class="hidden md:flex space-x-5 text-sm">
          {navLinks.map(link => (
            <a
              href={link.href}
              class={currentPath.startsWith(link.href) ? "font-semibold text-earth" : "hover:text-earth transition-colors"}
            >
              {link.label}
            </a>
          ))}
        </nav>

        <!-- Mobile hamburger button -->
        <button
          id="menu-toggle"
          type="button"
          class="md:hidden flex flex-col justify-center items-center w-8 h-8 gap-1.5"
          aria-label="Toggle menu"
          aria-expanded="false"
        >
          <span class="hamburger-bar block w-5 h-0.5 bg-ink transition-all duration-200"></span>
          <span class="hamburger-bar block w-5 h-0.5 bg-ink transition-all duration-200"></span>
          <span class="hamburger-bar block w-5 h-0.5 bg-ink transition-all duration-200"></span>
        </button>
      </div>

      <!-- Mobile nav drawer -->
      <nav
        id="mobile-menu"
        aria-label="Mobile navigation"
        class="md:hidden hidden border-t border-ink/10 bg-white"
      >
        <div class="mx-auto max-w-4xl px-6 py-4 flex flex-col space-y-3 text-sm">
          {navLinks.map(link => (
            <a
              href={link.href}
              class={
                (currentPath.startsWith(link.href)
                  ? "font-semibold text-earth"
                  : "hover:text-earth transition-colors")
                + " py-1"
              }
            >
              {link.label}
            </a>
          ))}
        </div>
      </nav>
    </header>

    {fullWidth ? (
      <main class="grow">
        <slot />
      </main>
    ) : (
      <main class="mx-auto max-w-4xl w-full px-6 py-10 grow">
        <slot />
      </main>
    )}

    <footer class="border-t border-ink/10 bg-white">
      <div class="mx-auto max-w-4xl px-6 py-6 text-sm text-ink/70">
        Walk gently. &copy; {new Date().getFullYear()} Earthsong.
      </div>
    </footer>

    <script>
      const toggle = document.getElementById('menu-toggle');
      const menu = document.getElementById('mobile-menu');
      if (toggle && menu) {
        toggle.addEventListener('click', () => {
          const open = !menu.classList.contains('hidden');
          menu.classList.toggle('hidden');
          toggle.setAttribute('aria-expanded', String(!open));
          const bars = toggle.querySelectorAll('.hamburger-bar');
          if (!open) {
            bars[0].classList.add('translate-y-[4px]', 'rotate-45');
            bars[1].classList.add('opacity-0');
            bars[2].classList.add('-translate-y-[4px]', '-rotate-45');
          } else {
            bars[0].classList.remove('translate-y-[4px]', 'rotate-45');
            bars[1].classList.remove('opacity-0');
            bars[2].classList.remove('-translate-y-[4px]', '-rotate-45');
          }
        });
      }
    </script>
  </body>
</html>

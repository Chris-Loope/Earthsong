---
import { Image } from 'astro:assets';
import Layout from '@/components/Layout.astro';
import GuideCTA from '@/components/GuideCTA.astro';
import heroImage from '@/assets/earthsong-hero.jpg';
---

<Layout title="Earthsong â€” A Living Symphony of Nature, Spirit, and Community" fullWidth>
    <!-- Hero Section -->
    <section class="relative text-white">
      <Image
        src={heroImage}
        alt=""
        role="presentation"
        widths={[640, 1024, 1536, 2048]}
        sizes="100vw"
        quality={80}
        class="absolute inset-0 h-[80vh] w-full object-cover"
        loading="eager"
      />
      <!-- gradient overlay for readability -->
      <div class="absolute inset-0 h-[80vh] bg-gradient-to-t from-black/60 via-black/30 to-transparent"></div>

      <div class="relative flex h-[80vh] items-center justify-center px-6">
        <div class="text-center max-w-2xl">
          <h1 class="text-5xl md:text-6xl font-bold mb-4 drop-shadow-lg">
            Welcome to Earthsong
          </h1>
          <p class="text-lg md:text-xl mb-6">
            A living symphony of nature, spirit, and community.
          </p>
          <a
            href="/codex"
            class="inline-block bg-white text-gray-900 font-semibold px-6 py-3 rounded-xl shadow-lg hover:bg-gray-200 transition"
          >
            Explore the Codex
          </a>
        </div>
      </div>
    </section>

    <!-- Guide CTA Section -->
    <section class="bg-emerald-50 border-t border-b border-emerald-200 py-16 px-6">
      <div class="mx-auto max-w-4xl text-center">
        <GuideCTA />
      </div>
    </section>
</Layout>
